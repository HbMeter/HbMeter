<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/cerchiorosso"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cerchiorosso"
            android:layout_marginRight="3dp"
            android:alpha="0.15"
            android:paddingTop="7dp"/>
        <ImageView
            android:id="@+id/cerchiogiallo"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cerchiogiallo"
            android:layout_marginRight="3dp"
            android:alpha="0.15"
            android:paddingTop="7dp"/>
        <ImageView
            android:id="@+id/cerchioverde"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cerchioverde"
            android:layout_marginRight="3dp"
            android:alpha="0.15"
            android:paddingTop="7dp"/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@android:color/black"
            android:paddingRight="25dp"
            android:paddingTop="7dp"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="25dp"
        android:weightSum="1">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/graph" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewnumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NÂ°" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="DATA" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="A*" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HbEye" />
            <TextView
                android:id="@+id/textViewhblab"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HbLab" />
        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />

    </LinearLayout>

</LinearLayout>